package mas;

import java.util.Scanner;

public class For07 {

	public static void main(String[] args) {
		Scanner input = new Scanner (System.in);
		// Programa que pide un número binario de 8 cifras y muestra su conversión a sistema decimal.

		System.out.println("Introduce un numero binario (8 cifras)");
		int numero = input.nextInt();
		
		int resultado =0;
		for (int i=0; i<8; i++) {
			
			int bit = numero%10; // cojo el bit menos pesado
			numero = numero/10; // elimino ese bit
			resultado = resultado + (int) (Math.pow(2, i)*bit); //acomulador
		}
		System.out.println("Su decimal es " + resultado);
		
		//-----------------------------------------------------------------------
		System.out.println("\n");

		System.out.println("Introduce un numero de cualquier cifra");
		String binario = input.nextLine();
		
		int exponente=0;
		long resultado2 =0;
		// Recorro desde el bit de menos peso hasta la de más
		
		
		for (int i= binario.length()-1; i>=0; i--) { 
			if (binario.charAt(i)=='1') {
				resultado2 = resultado2 + (long) (Math.pow(2, exponente));
				
			}
			
		}
		input.close();
	}

}
