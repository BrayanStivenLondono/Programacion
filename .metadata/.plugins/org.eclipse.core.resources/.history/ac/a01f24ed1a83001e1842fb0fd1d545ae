package mas;

import java.util.Scanner;

public class For07 {

	public static void main(String[] args) {
		Scanner input = new Scanner (System.in);
		// Programa que pide un número binario de 8 cifras y muestra su conversión a sistema decimal.

		System.out.println("Introduce un numero binario (8 cifras)");
		int numero = input.nextInt();
		
		int resultado =0;
		for (int i=0; i<8; i++) {
			
			int bit = numero%10; // cojo el bit menos pesado
			numero = numero/10; // elimino ese bit
			resultado = resultado + (int) (Math.pow(2, i)*bit); //acomulador
		}
		System.out.println("Su decimal es " + resultado);
		
		
		input.close();
	}

}
