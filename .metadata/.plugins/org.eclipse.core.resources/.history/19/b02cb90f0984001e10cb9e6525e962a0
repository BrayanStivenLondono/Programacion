package ejercicios05;

import java.util.Scanner;

public class Ejercicio39 {

	public static void main(String[] args) {
		Scanner input = new Scanner (System.in);
		// Pedir 10 números. Mostrar la media de los números positivos, la media de los números negativos y la cantidad de ceros.
		
		int numPositivos =0;
		int sumaPositivos=0;
		int numNegativos =0;
		int sumaNegativos =0;
		int ceros = 0;
		
		for (int i=0; i<=10; i++) {
			System.out.println("Introduce un numero");
			int numero = input.nextInt();

			if (numero<0) {
				numNegativos++;
				sumaNegativos-=numero;
				
			} else if (numero>0) {
				numPositivos++;
				sumaPositivos+=numero;
				
			} else if (numero=='0') {
				ceros++;
			}
		
		}
		System.out.println("La cantidad de ceros es "+ceros);
		if (numPositivos>0) {
			System.out.println("Media positivos "+(double)sumaPositivos/numPositivos);
		}
		if (numNegativos>0) {
			System.out.println("Media negativos "+ (double)sumaNegativos/numNegativos);
		}
		
		
		
		input.close();

	}

}
